namespace NSMain;

function fib(n : Int) : Int {
    if(n < 2) {
	    return n;
	}
	else {
	    return fib(n - 1) + fib(n - 2);
	}
}

function fib2(n : Int) : Int {
    return n < 2 ? n : fib2(n - 1) + fib2(n - 2);
}

function fact(n : Int) : Int {
  if(n == 0){
      return 1;
  }
  else {
      return n * fact(n - 1);
  }
}


// But recursive functions should only
// be compiled (?) using the `rec' modifier
entrypoint function main() : Int {
    var n = 5;
	return fact(n);
}