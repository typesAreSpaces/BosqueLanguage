namespace NSTest;

function add2(x: Int, y: Int): Int {
    return x + y;
}

entrypoint function add2C(): Int {
    return add2(2, 3);
}

function allOdd(...args: List<Int>): Bool {
    return args->all(fn(x) => x % 2 == 1);
}

entrypoint function allOddC(): Bool {
    return allOdd(1, 3, 4);
}

